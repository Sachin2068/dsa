public class FindRepeatingElements {

    public static void main(String[] args) {
        int[] arr = {4, 5, 6, 7, 5, 4, 8, 7};  // Declare and initialize the array.
        findRepeatingElements(arr);  // Call the method to find and print repeating elements.
    }

    public static void findRepeatingElements(int[] arr) {
        System.out.println("Repeating elements are: ");
        
        // Loop through the array
        for(int i = 0; i< arr.length;i++){
          boolean isReapeted = false;
          break;
        }
        for(j= 0;j<i;j++){
          if(arr[i]==arr[j]){
            isReapeted = true;
            break;
          }
          
        }
        if(!isReapeted){
          for(j= i + 1;j<arr.length;j++){
            if(arr[i]==arr[j]){
            System.out.println(arr[i]);
            break;
                }
            }
        }
    }
}
